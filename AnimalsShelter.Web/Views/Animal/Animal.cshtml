@using AnimalsShelter.Web.ViewModels.Animals;

@model AnimalsViewModel

@{
    ViewBag.Title = "Animal info";
}

<h3 align="center">Added by @Model.User.UserName.Split('@')[0].ToUpper()</h3>

@Html.HiddenFor(x => Model.Id)

<div class="container">
    <div class="row">
        <div class="col-md-5" align="center">
            @Html.Partial("_GetImagePartial", Model)
        </div>
        <div class="col-md-5">
            <h4><strong>Owner details: </strong></h4>
            <p><span class="glyphicon glyphicon-envelope"></span> Email: @Model.User.Email </p>
            <p><span class="glyphicon glyphicon-phone-alt"></span> Phone number: @Model.PhoneNumber</p>
        </div>
    </div>

    <h4><strong>Animal details: </strong></h4>
    <div class="row">
        <div class="col-md-5">
            <p><span class="glyphicon glyphicon-cog"></span> Name: @Model.Name</p>
            <p><span class="glyphicon glyphicon-road"></span> Type: @Model.Type</p>
            <p><span class="glyphicon glyphicon-plane"></span> Breed: @Model.Breed</p>
        </div>
        <div class="col-md-5">
            <p><span class="glyphicon glyphicon-inbox"></span> Gender: @Model.Gender</p>
            <p><span class="glyphicon glyphicon-hdd"></span> Age: @Model.Age</p>
            <p><span class="glyphicon glyphicon-picture"></span> Size: @Model.Size</p>
        </div>
    </div>
</div>